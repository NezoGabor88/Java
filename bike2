public class Bike {
    private String bikeName;
    private int bikeSpeed;
    private String bikeType;
    private int bikeAge;

    public Bike(String name, int speed, String type, int age) {
        this.bikeName = name;
        this.bikeSpeed = speed;
        this.bikeType = type;
        this.bikeAge = age;
    }

    public String getBikeName() {
        return bikeName;
    }

    public int getBikeSpeed() {
        return bikeSpeed;
    }

    public String getBikeType() {
        return bikeType;
    }

    public int getBikeAge() {
        return bikeAge;
    }

    public static void main(String[] args) {
        Bike myBike = new Bike("Mountain Bike", 20, "Mountain", 2);

        System.out.println("Bike Name: " + myBike.getBikeName());
        System.out.println("Bike Speed: " + myBike.getBikeSpeed() + " km/h");
        System.out.println("Bike Type: " + myBike.getBikeType());
        System.out.println("Bike Age: " + myBike.getBikeAge() + " years old");
    }
}
